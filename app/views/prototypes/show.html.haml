.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          = link_to user_path(@prototype.user) do
            = image_tag(@prototype.user_avatar, class: 'media-object', style: 'width: 64px; height: 64px')
        .media-body
          %h4#top-aligned-media.media-heading
          = @prototype.name
          .proto-user
            = link_to user_path(@prototype.user) do
              by #{@prototype.user_name}
            %span.degree
            = @prototype.user.profile

    .col-md-6.text-right
      = render partial: 'likes/like', locals: { prototype: @prototype, like: @like }

  .row
    .col-md-9
      = image_tag(@prototype.main_image, class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        = render partial: 'prototypes/sub_image', collection: @prototype.sub_images, as: :sub_image
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @prototype.catchcopy
    .col-md-6
      %h4 Concept
      %p
        = @prototype.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num
        = "(#{@prototype.comments_num})"
    .col-md-8
      .comments_list
        = render @comments
        
      - if user_signed_in?
        = form_for [@prototype, @comment], html: { class: 'form-online' }, remote: true do |f|
          %h4 Write a comment
          .row
            .form-group.col-md-10
              = f.text_area :text, class: 'form-control', placeholder: 'Your comments', rows: 3
            .form-group.col-md-2
              = f.submit 'Comment', class: 'btn btn-primary'
