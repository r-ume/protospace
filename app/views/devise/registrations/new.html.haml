.container.user-new
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| 
    = devise_error_messages!
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, placeholder: "Username", autofocus: true, required: true
            .user-image.col-md-2
              %button.btn.btn-primary Add image
              %input{type: "file"}/
          .user-email
            = f.text_field :email, placeholder: "Email", required: true
          .user-password
            = f.password_field :password, placeholder: "Password", required: true, autocomplete: "off"
        .col-md-12
          %h4 Position
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :position, placeholder: "Position"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, placeholder: "Profile", size: "30×4"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :occupation, placeholder: "Occupation", size: "30×4"
              
      .row.text-center.user-btn
        .actions
          = f.submit "SIGN UP", id: "button", class: "btn btn-lg btn-primary btn-block"
