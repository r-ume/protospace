.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to user_path(@user) do
          = image_tag(@user.avatar, alt: "profile_photo", class: "media-object", style: "width: 64px; height: 64px")
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = @num_of_current_user_prototypes
            %i Projects
        .proto-user
          %span.degree 
            = @user.position
        .row
          .col-md-6
            %h4 Profile
            %p 
              = @user.profile
          .col-md-6
            %h4 Works
            %p 
              = @user.occupation

.container.proto-list
  .row
    - if @current_user_prototypes.present?
      = render partial: 'prototypes/prototype', collection: @current_user_prototypes
                    
.text-center
  = will_paginate @current_user_prototypes, renderer: BootstrapPagination::Rails
