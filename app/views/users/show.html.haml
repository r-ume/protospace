.container.user-page
  %header.user-nav
    .media
      .media-left
        %a{href: "#"}
          %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", src: "data:image/svg+xml;base64,", style: "width: 64px; height: 64px;"}/
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = @num_of_current_user_prototypes
            %i Projects
        .proto-user
          %span.degree 
            = current_user.position
        .row
          .col-md-6
            %h4 Profile
            %p 
              = current_user.profile
          .col-md-6
            %h4 Works
            %p 
              = current_user.occupation

.container.proto-list
  .row
    - if @current_user_prototypes.present?
      - @current_user_prototypes.each do |prototype|
        .col-sm-4.col-md-3.proto-content
          .thumbnail
            %a{href: ""}
              = image_tag("sample.png")
              .caption
                %h3 
                  = prototype.catchcopy
                .proto-meta
                  .proto-date
                    = prototype.posted_time

                %ul.proto-tag-list.list-inline
                  %li
                    %a{href: "#", class: "btn btn-default"} iPad
                  %li
                    %a{href: "#", class: "btn btn-default"} wireframe
                    
.text-center
  = will_paginate @current_user_prototypes
